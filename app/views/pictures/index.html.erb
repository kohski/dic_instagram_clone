<h1>Pictures</h1>

<% @pictures.each do |picture| %>
<div class="panel panel-default">
  <div class="panel-heading"><%= picture.title%></div>
  <div class="panel-body">
    <div><%= image_tag(picture.image.url) if picture.image && picture.image.url %></div>
    <div><%= picture.comment %></div>  
  </div>
</div>
<div class="panel-footer">
  <%= link_to 'show', picture_path(picture.id),class: "btn btn-default" %>
  <%= link_to 'edit', edit_picture_path(picture.id),class: "btn btn-default" %>
  <%= link_to 'delete', picture_path(picture.id),method: :delete,class: "btn btn-default" %>
</div>
<% end %>

<%= link_to "new post",new_picture_path %>