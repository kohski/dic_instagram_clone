<%= form_with(model: @picture,local: true,url:choose_new_or_edit ) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :image %>
    <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
    <%= f.file_field :image,id: :picture_image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>